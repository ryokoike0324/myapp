<% provide(:title, '応募者一覧') %>
<div class="w-1/2 mx-auto px-4 py-12">
  <div class="border-b border-gray-300 pb-3 mb-12">
    <h2 class="text-3xl font-bold text-gray-800 leading-tight"> <%= @request.title %> </h2>
  </div>
  <p class="mb-12 text-2xl font-semibold text-gray-600">応募者一覧</p>
  <div class="my-8">
    <!-- 全てを1列に配置 -->
    <div class="grid grid-cols-1 gap-6">
      <% @applicants.each do |applicant| %>
        <div class="bg-white shadow-md rounded-lg p-6 hover:bg-gray-100 mb-5">
          <div class="flex gap-7 items-center pl-16 ml-1">
            <%= link_to image_tag(applicant.image.url, class: "rounded-full h-20 w-20"), clients_applicant_path(request_id: @request.id, id: applicant.id) %>
            <!-- 名前にshowテンプレートへのリンクを追加 -->
            <%= link_to applicant.name, clients_applicant_path(request_id: @request.id, id: applicant.id), class: "font-bold text-blue-700 text-lg hover:text-blue-500" %>
          </div>
          <dl class="mt-3 text-left divide-y divide-gray-200 border-t-2 border-gray-200">
            <div class="flex gap-3 items-center py-2">
              <dt class="text-sm font-medium text-gray-500 w-40 text-right pr-1">ポートフォリオURL:</dt>
              <dd class="text-sm text-gray-900 flex-auto pl-1">
                <a href="<%= applicant.portfolio %>" target="_blank" class="text-blue-500 hover:text-blue-700">
                  <%= applicant.portfolio %>
                </a>
              </dd>
            </div>
            <div class="flex gap-3 items-center py-2">
              <dt class="text-sm font-medium text-gray-500 w-40 text-right pr-1">学習期間:</dt>
              <dd class="text-sm text-gray-900 flex-auto pl-1"><%= applicant.study_period %></dd>
            </div>
          </dl>
        </div>
      <% end %>
    </div>
  </div>
  <div class="flex justify-center">
    <%= paginate(@applicants) %>
  </div>
  <%= link_to 'お仕事一覧へ', clients_requests_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
</div>
