<% provide(:title, t('.title')) %>

<div class="flex justify-center items-center" >
  <div class="w-1/3 py-16">
  <h2 class="text-3xl mb-16 font-bold"><%= t('.title', resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: 'registrations.edit.title')) %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "clients/shared/error_messages", resource: resource %>

    <div class="mb-10">
      <%= f.label :email, class: "block text-gray-700 text-base font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
    <% end %>

    <div class="mb-10">
      <%= f.label :current_password, t('.current_password'), class: "block text-gray-700 text-base font-bold mb-2" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      <i class='text-sm text-gray-600'><%= t('.we_need_your_current_password_to_confirm_your_changes') %></i>
    </div>

    <div class="mb-10">
      <%= f.label :password, class: "block text-gray-700 text-base font-bold mb-2" do %>
        <%= t('.new_password') %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      <% if @minimum_password_length %>
        <i class='text-sm text-gray-600'><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></i>
      <% end %>
    </div>

    <div class="mb-16">
      <%= f.label :password_confirmation, class: "block text-gray-700 text-base font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>


    <%# <div class='flex justify-between mb-10'> %>

    <div>
      <%= f.submit t('.update'), class: 'bg-blue-500 hover:bg-blue-700 text-white text-center font-bold py-2 px-12 rounded focus:outline-none focus:shadow-outline cursor-pointer' %>
    </div>
  <% end %>

  <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure'), turbo_confirm: t('.are_you_sure') }, method: :delete, class: 'bg-red-500 hover:bg-red-700 text-white text-center font-bold py-2 px-10 rounded focus:outline-none focus:shadow-outline cursor-pointer' %>
    <%# </div> %>

  <%= link_to t('devise.shared.links.back'), :back, class: 'text-gray-500 text-center font-bold cursor-pointer' %>
  </div>
</div>
