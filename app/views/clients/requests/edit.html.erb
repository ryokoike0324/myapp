<% provide(:title, t('.title')) %>

<div class="flex justify-center items-center" >
  <div class="w-1/2 py-12">
    <h2 class="text-3xl pb-10 font-bold"><%= t('.title') %></h2>
    <%# # 変数fにfオブジェクトを、変数show_current_passwordにはtrueを入れてパーシャルに渡す %>
    <%= form_with model: @request, url: clients_request_path, data:{ turbo: false } do |f| %>
      <div class="mb-8">
        <%= f.label :title, class: "block text-gray-700 text-base font-bold mb-2" %>
        <%= f.text_field :title, autofocus: true, class: form_field_error_class(@request, :title) %>
        <%= display_field_error_messages(@request, :title) %>
      </div>
      <div class="mb-8">
        <%= f.label :description, class: "block text-gray-700 text-base font-bold mb-2"  %>
        <%= f.text_area :description, class: "#{form_field_error_class(@request, :description)} min-h-80" %>
        <%= display_field_error_messages(@request, :description) %>
      </div>
      <div class="mb-8">
        <%= f.label :deadline, class: "block text-gray-700 text-base font-bold mb-2"  %>
        <%= f.date_field :deadline, class: form_field_error_class(@request, :deadline) %>
        <%= display_field_error_messages(@request, :deadline) %>
      </div>
      <div class="mb-8">
        <%= f.label :delivery_date, class: "block text-gray-700 text-base font-bold mb-2"  %>
        <%= f.date_field :delivery_date, class: form_field_error_class(@request, :delivery_date) %>
        <%= display_field_error_messages(@request, :delivery_date) %>
      </div>
      <div class="flex justify-between mb-16">
        <%= f.submit '更新', class: 'bg-blue-500 hover:bg-blue-700 text-white text-center font-bold py-2 px-10 rounded focus:outline-none focus:shadow-outline cursor-pointer' %>
        <span data-open-modal="confirmationModal-<%= @request.id %>" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-10 rounded focus:outline-none focus:shadow-outline cursor-pointer block">削除</span>
      </div>
    <% end %>
    <%= link_to '戻る', public_request_path(@request), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= render 'clients/requests/modal_delete_request' %>
  </div>
</div>