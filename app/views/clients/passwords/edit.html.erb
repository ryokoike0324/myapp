<% provide(:title, t('.title')) %>

<div class="flex justify-center items-center" >
  <div class="w-1/3">
    <h2 class="text-3xl pb-10 font-bold"><%= t('.change_your_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "clients/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-8">
      <%= f.label :password, class: "block text-gray-700 text-base font-bold mb-2" do %>
        <%= t('.new_password') %>
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="mb-8">
      <%= f.label :password_confirmation, t('.confirm_new_password'), class: "block text-gray-700 text-base font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <%= f.submit class: "bg-blue-500 hover:bg-blue-700 text-white text-center font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer mb-3" do %>
        <%= t('.change_my_password') %>
      <% end %>
    <% end %>

    <%= render "clients/shared/links" %>
  </div>
</div>
