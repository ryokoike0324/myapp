<main class="w-96 mx-auto py-48 min-h-full">
<%= render "contractors/shared/error_messages", resource: resource %>

  <h2 class="text-3xl pb-10 font-bold"><%= t('.forgot_your_password') %></h2>
  <p class="mb-5 text-sm text-gray-600">アカウントに登録されているメールアドレスを入力してください。再設定メールを送信します。</p>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <div class="mb-5">
      <%= f.label :email, class: "block text-gray-700 text-base font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-10'  %>
    </div>

    <div class="bg-blue-500 hover:bg-blue-700 text-white text-center font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer mb-3">
      <%= f.submit t('.send_me_reset_password_instructions') %>
    </div>
  <% end %>

  <%= render "clients/shared/links" %>
</main>
