<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="mb-5">
    <%= f.label :email, class: "block text-gray-700 text-base font-bold mb-2" %>
    <%= f.email_field :email, autocomplete: "email", class: form_field_error_class(resource, :email)  %>
    <%= display_field_error_messages(resource, :email) %>
  </div>

  <%= f.submit 'パスワード再設定メールを送信', class: 'bg-blue-500 hover:bg-blue-700 text-white text-center font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer mb-3' %>
<% end %>