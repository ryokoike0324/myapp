<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-8">
    <%= f.label :email, class: "block text-gray-700 text-base font-bold mb-2" %>
    <%= f.email_field :email, autocomplete: "email", class: form_field_error_class(resource, :email) %>
  </div>
  <div class="mb-8">
    <%= f.label :password, class: "block text-gray-700 text-base font-bold mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: form_field_error_class(resource, :password) %>
  </div>
  <%= f.submit "#{user_type}ログイン", class: 'bg-blue-500 hover:bg-blue-700 text-white text-center font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer mb-3' %>
  <% if devise_mapping.rememberable? %>
    <div class="mb-8">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

<% end %>
