<% provide(:title, t('.title')) %>
<div class="w-96 mx-auto py-28 min-h-full">
  <h2 class="text-3xl pb-10 font-bold"><%= t('.title') %></h2>

  <%= form_with model: @contact, url: confirm_contacts_path ,data:{ turbo: false } do |f| %>
    <div class="mb-8">
      <%= f.label :name, class: "block text-gray-700 text-base font-bold mb-2" %>
      <%= f.text_field :name, autofocus: true, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="mb-8">
      <%= f.label :email, class: "block text-gray-700 text-base font-bold mb-2"  %>
      <%= f.email_field :email, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'  %>
    </div>

    <div class="mb-8">
      <%= f.label :subject, class: "block text-gray-700 text-base font-bold mb-2"  %>
      <%= f.text_field :subject, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="mb-8">
      <%= f.label :message, class: "block text-gray-700 text-base font-bold mb-2"  %>
      <%= f.text_area :message, size: '10x10', class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'  %>
    </div>

    <%= f.submit t('.submit'), class: 'bg-blue-500 hover:bg-blue-700 text-white text-center font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer mb-3' %>
  <% end %>
</div>
