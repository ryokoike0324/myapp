<main class="w-96 mx-auto py-36 min-h-full">
  <h2 class="text-3xl pb-10 font-bold"><%= t('.sign_in') %></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-8">
      <%= f.label :email, class: "block text-gray-700 text-base font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="mb-8">
      <%= f.label :password, class: "block text-gray-700 text-base font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="mb-8">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="bg-blue-500 hover:bg-blue-700 text-white text-center font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer mb-3">
      <%= f.submit t('.sign_in') %>
    </div>
  <% end %>
  <%= render "contractors/shared/links" %>
</main>
